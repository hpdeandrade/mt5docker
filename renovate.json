{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "docker": {
      "enabled": true,
      "fileMatch": ["Dockerfile"]
  },
  "docker-compose": {
      "enabled": true,
      "fileMatch": ["compose.yaml"]
  },
  "schedule": ["every day"],
  "automerge": false
}