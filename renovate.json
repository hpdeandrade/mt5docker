{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "pip_requirements": {
        "enabled": true,
        "fileMatch": [
            "requirements.txt"
        ]
    },
    "docker-compose": {
        "enabled": true,
        "fileMatch": [
            "compose.yaml"
        ]
    },
    "packageRules": [
        {
            "matchCategories": [
                "docker"
            ],
            "enabled": true,
            "fileMatch": [
                "Dockerfile"
            ]
        },
        {
            "matchCategories": [
                "docker"
            ],
            "enabled": true
        },
        {
            "matchManagers": [
                "pip_requirements"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "groupName": "Python major dependency updates"
        },
        {
            "matchManagers": [
                "pip_requirements"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "Python minor and patch dependency updates"
        }
    ],
    "automerge": false
}
