{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "docker-compose": {
        "enabled": true,
        "fileMatch": [
            "compose.yaml"
        ]
    },
    "automerge": false,
    "packageRules": [
        {
            "matchCategories": [
                "docker"
            ],
            "enabled": true,
            "fileMatch": [
                "Dockerfile"
            ]
        }
    ]
}
