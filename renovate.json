{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "dockerfile": {
    "managerFilePatterns": [
      "/Dockerfile/"
    ]
  },
  "docker-compose": {
    "managerFilePatterns": [
      "/compose.yaml/"
    ]
  },
  "pip_requirements": {
    "managerFilePatterns": [
      "/requirements.txt/"
    ],
    "packageRules": [
      {
        "matchManagers": [
          "pip_requirements"
        ],
        "matchPackageNames": [
          "*"
        ],
        "enabled": false
      },
      {
        "matchManagers": [
          "pip_requirements"
        ],
        "matchPackageNames": [
          "MetaTrader5",
          "pymt5linux"
        ],
        "enabled": true
      }
    ]
  },
  "commitMessagePrefix": "chore(deps): "
}
